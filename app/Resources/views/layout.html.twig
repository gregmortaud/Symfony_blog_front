{# src/ClientBundle/Resources/views/layout.html.twig #}
<!DOCTYPE HTML>
<html>
  <head>
    <meta charset="utf-8">
    <title>{% block title %}Blog{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/fontawesome/css/font-awesome.min.css') }}">
    {% endblock %}
  </head>
  <body>
    <header class="header">
        <a href="{{ path('home') }}">
          <img class="logo-icon" src="{{ asset('images/blog.png') }}">
        </a>
        <h1 class="logo">My Blog</h1>
        <button type="button" class="login-button btn btn-default"><a href="{{ path('login') }}">Login</a></button>
    </header>
    <div class="container">
      {% block body %}
      {% endblock %}
    </div>
  </body>
</html>
